<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BodyMassIndexFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="Body Mass Index"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/text_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Height"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="10dp"
        />

    <EditText
        android:id="@+id/input_height"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_height"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="70dp"
        android:inputType="textPersonName"
        android:hint="Input your height (m)"
        />


    <TextView
        android:id="@+id/text_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Weight"
        app:layout_constraintTop_toBottomOf="@id/text_height"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="11dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"
        />

    <EditText
        android:id="@+id/input_weight"
        android:layout_width="298dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/text_height"
        app:layout_constraintTop_toBottomOf="@id/text_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="120dp"
        android:inputType="textPersonName"
        android:hint="Input your weight (kg)"
        />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="CALCULATE"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>